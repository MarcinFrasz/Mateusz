@model Lekcjonarz
@*  Add view for Lekcjonarz*@
<form method="post">
<div class="border p-3 mt-4">
<h1>Dodaj Lekcjonarz</h1>
<div class="mb-3">
<label asp-for="DzienLiturgiczny"></label>
<select asp-for="DzienLiturgiczny" 
class="form-control" 
asp-items= "@((List<string>)ViewData["dzienLiturgiczny_list"]).ConvertAll(a =>
                
                     new SelectListItem()
                    {
                        Text = a.ToString(),
                        Value = a.ToString(),
                        Selected = false
                    }).ToList()">
</select>
<span asp-validation-for="DzienLiturgiczny" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="TypCzytania"></label>
<select asp-for="TypCzytania" 
class="form-control" 
asp-items= "@((List<string>)ViewData["typCzytania_list"]).ConvertAll(a =>
                
                     new SelectListItem()
                    {
                        Text = a.ToString(),
                        Value = a.ToString(),
                        Selected = false
                    }).ToList()">
</select>
<span asp-validation-for="TypCzytania" class="text-danger"></span>
</div>

<div class="mb-3">
<label asp-for=Siglum></label>
<input asp-for=Siglum class="form-control"/>
<span asp-validation-for="Siglum" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=Tekst></label>
<textarea asp-for=Tekst  class="form-control"></textarea>
<span asp-validation-for="Tekst" class="text-danger"></span>
</div>

<div class="mb-3">
<label class="text-danger">@TempData["error"]</label>
   </div>
   <button type="submit" class="btn btn-success">
   Dodaj</button>
   <a asp-controller="Lekcjonarz" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Wróć do listy
        </a>
</div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
     }
}
