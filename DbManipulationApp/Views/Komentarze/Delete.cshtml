@model Komentarze
@*  Delete view for Komentarze*@
<form method="post">
<input asp-for=RowVersion hidden />
<div class="border p-3 mt-4">
<h1>Usuń Komentarz</h1>
<div class="mb-3">
<label asp-for=Idkom></label>
<input asp-for="Idkom" class="form-control" hidden/>
<input asp-for="Idkom" class="form-control" disabled/>
<span asp-validation-for="Idkom"/>
</div>
<div class="mb-3">
<label asp-for="DzienLiturgiczny"></label>
<input asp-for=DzienLiturgiczny class="form-control" disabled/>
<input asp-for="DzienLiturgiczny" class="form-control" hidden/>
<span asp-validation-for="DzienLiturgiczny" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="KomZrodlo"></label>
<input asp-for=KomZrodlo class="form-control" disabled></input>
<input asp-for="KomZrodlo" class="form-control" hidden></input>
<span asp-validation-for="KomZrodlo" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="Tekst"></label>
<textarea asp-for=Tekst class="form-control" disabled></textarea>
<textarea asp-for="Tekst" class="form-control" hidden></textarea>
<span asp-validation-for="Tekst" class="text-danger"></span>
</div>
<div class="mb-3">
<label class="text-danger">@TempData["error"]</label>
   </div>
   <button type="submit" class="btn btn-danger">
   Usuń</button>
   <a asp-controller="Komentarze" asp-action="Index" class="btn btn-secondary">
            Wróć do listy
        </a>
</div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
     }
}
