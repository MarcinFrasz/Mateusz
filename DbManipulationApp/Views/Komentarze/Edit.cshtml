@model KomentarzeEditModel
@* Edit view for Komentarze*@
<form method="post">
<input asp-for=EditedRecord.RowVersion hidden />
<div class="border p-3 mt-4">
<h1>Edytuj Patrona</h1>
<div class="mb-3">
<label asp-for="EditedRecord.Idkom"></label>
<input asp-for="EditedRecord.Idkom" class="form-control" disabled />
<input asp-for="EditedRecord.Idkom" hidden/>
<span asp-validation-for="EditedRecord.Idkom" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="EditedRecord.DzienLiturgiczny"></label>
<select asp-for="EditedRecord.DzienLiturgiczny" 
class="form-control" 
asp-items= "@((List<string>)ViewData["dzienLiturgiczny_list"]).ConvertAll(a =>
                
                     new SelectListItem()
                    {
                        Text = a.ToString(),
                        Value = a.ToString(),
                        Selected = false
                    }).ToList()">
</select>
<span asp-validation-for="EditedRecord.DzienLiturgiczny" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="EditedRecord.KomZrodlo"></label>
<select asp-for="EditedRecord.KomZrodlo" 
class="form-control" 
asp-items= "@((List<string>)ViewData["komentarz_list"]).ConvertAll(a =>
                
                     new SelectListItem()
                    {
                        Text = a.ToString(),
                        Value = a.ToString(),
                        Selected = false
                    }).ToList()">
</select>
<span asp-validation-for="EditedRecord.KomZrodlo" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=EditedRecord.Tekst></label>
<textarea asp-for=EditedRecord.Tekst class="form-control"></textarea>
<span asp-validation-for="EditedRecord.Tekst" class="text-danger"></span>
</div>
<div class="mb-3">
<label class="text-danger">@TempData["error"]</label>
   </div>
   <button type="submit" class="btn btn-success">
   Zapisz zmiany</button>
   <a asp-controller="Komentarz" asp-action="Index" class="btn btn-secondary">
           <i class="bi bi-arrow-return-left"></i> Wróć do listy
        </a>
</div>
<table  class="table table-hover">
    <thead>
    <tr class="table-primary">
        <th>Komentarz id</th>
        <th>Dzień liturginczy</th>
        <th>Komentarz źródło</th>
        <th>Tekst</th>
    </tr>
    </thead>
             <tr>
            <td>
                @Model.MainRecord.Idkom
                <input asp-for=MainRecord.Idkom hidden />
            </td>
            <td>
                @Model.MainRecord.DzienLiturgiczny
                <input asp-for=MainRecord.DzienLiturgiczny hidden/>
                </td>
            <td>
                @Model.MainRecord.KomZrodlo
                <textarea asp-for=MainRecord.KomZrodlo hidden></textarea>
                </td>
            <td>
                @Model.MainRecord.Tekst
                <textarea asp-for=MainRecord.Tekst hidden></textarea>
                <input asp-for=MainRecord.RowVersion hidden/>
                </td>
            <td>
            </tr>
</table>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
     }
}
