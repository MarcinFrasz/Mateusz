@model VideoViewModel

<form method="post">
<h1>Dodaj/Edytuj rekord</h1>

Data:<input asp-for=@Model.Current_video.Data 
type="date" 
class="form-control" 
value=@Model.Current_video.Data.ToString("yyyy-MM-dd")
/>

Typ czytania:<select 
class="form-control" 
id="in_typczytania"
name="input_typczytania"
asp-for="@Model.Current_video.TypCzytania"
asp-items= "@Model.Czytania_list.ConvertAll(a =>
                
                     new SelectListItem()
                    {
                        Text = a.ToString(),
                        Value = a.ToString(),
                        Selected = false
                    }).ToList()">

</select>

Youtube id: <input asp-for=@Model.Current_video.YoutubeId 
type="datetime" 
class="form-control" 
id="in_youtubeid"
name="input_youtubeid"
value=@Model.Current_video.YoutubeId
/>




<button type="button" class="btn btn-success" asp-controller="DataOperations" asp-action="Video">Add</button>
<button type="button" class="btn btn-warning" asp-controller="DataOperations" asp-action="Video">Update</button>
</form>

<br />
<div id="Videos_table" style="overflow:scroll; height:400px;">
<table  class="table table-hover">
    <tr>
        <td>Video id</td>
        <td>Data</td>
        <td>Typ czytania</td>
        <td>Youtube id</td>
        <td>Video</td>
    </tr>
    @{
        foreach(var item in Model.Videos_list)
        { 
            <input id="VidIdPicked" type="hidden" value="@item.IdVideo">
            <tr>
            <td>@item.IdVideo</td>
            <td>@item.Data</td>
            <td>@item.TypCzytania</td>
            <td>@item.YoutubeId</td>
            <td>
            <aside>
            <iframe id="ytplayer" type="text/html" width="600" height="150" src="https://www.youtube.com/embed/@item.YoutubeId" frameborder="0"></iframe>
            </aside>
            </td>
            <td>    
            <span asp-validation-for="@Model.Current_video.Data" class="text-danger"></span>
            <button 
            id="Button_search"
            type="button" 
            class="btn btn-success" 
            onclick="OnUpdateSelected(@item.IdVideo)"
            >
            Edytuj</button></td>
            </tr>
        }
    }
</table>
</div>
<br />

