@model Video

<form method="post">
<input asp-for=RowVersion hidden />
<div class="border p-3 mt-4">
<h1>Edytuj Video</h1>
<div class="mb-3">
<label asp-for="IdVideo"></label>
<input asp-for="IdVideo" class="form-control" disabled />
<input asp-for="IdVideo" hidden/>
<span asp-validation-for="IdVideo" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="Data"></label>
<input asp-for=Data type="date" class="form-control"/>
<span asp-validation-for="Data" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="TypCzytania"></label>
<select asp-for="TypCzytania" 
class="form-control" 
asp-items= "@((List<string>)ViewData["typCzytania_list"]).ConvertAll(a =>
                
                     new SelectListItem()
                    {
                        Text = a.ToString(),
                        Value = a.ToString(),
                        Selected = false
                    }).ToList()">

</select>
<span asp-validation-for="TypCzytania" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=YoutubeId></label>
<input asp-for=YoutubeId class="form-control"/>
<span asp-validation-for="YoutubeId" class="text-danger"></span>
</div>
<div class="mb-3">
<label class="text-danger">@TempData["error"]</label>
   </div>
   <button type="submit" class="btn btn-success">
   Zapisz zmiany</button>
   <a asp-controller="Video" asp-action="Index" class="btn btn-secondary">
            Wróć do listy
        </a>
</div>
</form>
<table  class="table table-hover">
    <thead>
    <tr class="table-primary">
        <th>Video id</th>
        <th>Data</th>
        <th>Typ czytania</th>
        <th>Youtube id</th>
        <th>Video</th>
    </tr>
    </thead>


             <tr>
            <td>@Model.IdVideo</td>
            <td>@Model.Data</td>
            <td>@Model.TypCzytania</td>
            <td>@Model.YoutubeId</td>
            <td>
            <aside>
            <iframe id="ytplayer" type="text/html" width="600" height="150" src="https://www.youtube.com/embed/@Model.YoutubeId" frameborder="0"></iframe>
            </aside>
            </td>
            </tr>
</table>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
     }
}
