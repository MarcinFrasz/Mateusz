@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>
<label class="text-danger">@TempData["error"]</label>
<br />
<div id="Kalendarz_table" style="overflow:scroll; height:600px;">
<table  class="table table-hover">
    <thead>
    <tr class="table-primary">
        <th>Id</th>
        <th>Email</th>
    </tr>
    </thead>
    @{
            foreach(var user in Model)
            {
            <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>
            <td>
            <div align="center">
            <a asp-controller="Komentarze" asp-action="Edit" asp-route-id="@user.Id" 
            class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edytuj</a>
            <br>
            <br>
            <a asp-controller="Komentarze" asp-action="Delete" asp-route-id="@user.Id" 
            class="btn btn-danger"><i class="bi bi-trash-fill"></i> Usuń</a>
            </div>
            </td>
            </tr>
            }
        }
</table>
</div>
<br />
