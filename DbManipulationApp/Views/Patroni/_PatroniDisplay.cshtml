@model IEnumerable<Patroni>
<label class="text-danger">@TempData["error"]</label>
<br />
<div id="Patroni_table" style="overflow:scroll; height:600px;">
<table  class="table table-hover">
    <thead>
    <tr class="table-primary">
        <th>Data</th>
        <th>Patron</th>
        <th>Główny</th>
        <th>Opis</th>
    </tr>
    </thead>
    @{
            foreach(var item in Model)
            {
            <tr>
            <td>@item.Data</td>
            <td>@item.Patron</td>
            <td>@item.Glowny</td>
            <td>@item.Opis</td>
            <td>
            <div align="center">
            <a asp-controller="Patroni" asp-action="Edit" asp-route-id="@item.Id" 
            class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edytuj</a>
            <br>
            <br>
            <a asp-controller="Patroni" asp-action="Delete" asp-route-id="@item.Id" 
            class="btn btn-danger"><i class="bi bi-trash-fill"></i> Usuń</a>
            </div>
            </td>
            </tr>
            }
        }
</table>
</div>
<br />
