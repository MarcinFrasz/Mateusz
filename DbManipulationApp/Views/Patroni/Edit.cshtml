@model PatroniEditModel
@* Edit view for Patroni*@
<form method="post">
<input asp-for=EditedRecord.RowVersion hidden />
<div class="border p-3 mt-4">
<h1>Edytuj Patrona</h1>
<div class="mb-3">
<label asp-for="EditedRecord.Id"></label>
<input asp-for="EditedRecord.Id" class="form-control" disabled />
<input asp-for="EditedRecord.Id" hidden/>
<span asp-validation-for="EditedRecord.Id" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="EditedRecord.Data"></label>
<input asp-for=EditedRecord.Data class="form-control"/>
<span asp-validation-for="EditedRecord.Data" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="EditedRecord.Patron"></label>
<textarea asp-for=EditedRecord.Patron class="form-control"></textarea>
<span asp-validation-for="EditedRecord.Patron" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=EditedRecord.Glowny></label>
<input asp-for=EditedRecord.Glowny type="checkbox" class="form-check-input"/>
<span asp-validation-for="EditedRecord.Glowny" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=EditedRecord.Opis></label>
<textarea asp-for=EditedRecord.Opis class="form-control"></textarea>
<span asp-validation-for="EditedRecord.Opis" class="text-danger"></span>
</div>
<div class="mb-3">
<label class="text-danger">@TempData["error"]</label>
   </div>
   <button type="submit" class="btn btn-success">
   Zapisz zmiany</button>
   <a asp-controller="Patroni" asp-action="Index" class="btn btn-secondary">
           <i class="bi bi-arrow-return-left"></i> Wróć do listy
        </a>
</div>
<table  class="table table-hover">
    <thead>
    <tr class="table-primary">
        <th>Patron id</th>
        <th>Data</th>
        <th>Patron</th>
        <th>Główny</th>
        <th>Opis</th>
    </tr>
    </thead>
             <tr>
            <td>
                @Model.MainRecord.Id
                <input asp-for=MainRecord.Id hidden />
            </td>
            <td>
                @Model.MainRecord.Data
                <input asp-for=MainRecord.Data hidden/>
                </td>
            <td>
                @Model.MainRecord.Patron
                <textarea asp-for=MainRecord.Patron hidden></textarea>
                </td>
            <td>
                @Model.MainRecord.Glowny
                <input asp-for=MainRecord.Glowny type="checkbox" hidden/>
                </td>
            <td>
                @Model.MainRecord.Opis
                <textarea asp-for=MainRecord.Opis hidden></textarea>
                <input asp-for=MainRecord.RowVersion hidden/>
                </td>
            <td>
            </tr>
</table>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
     }
}
