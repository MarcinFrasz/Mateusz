@model Kalendarz
@*  Delete view for Kalendarz*@
<form method="post">
<input asp-for=RowVersion hidden />
<div class="border p-3 mt-4">
<h1>Usuń Kalendarz</h1>
<div class="mb-3">
<label asp-for=Data></label>
<input asp-for="Data" class="form-control" hidden/>
<input asp-for="Data" type="date"  class="form-control" disabled/>
<span asp-validation-for="Data"/>
</div>
<div class="mb-3">
<label asp-for="DzienLiturgiczny"></label>
<input asp-for=DzienLiturgiczny class="form-control" disabled/>
<input asp-for="DzienLiturgiczny" class="form-control" hidden/>
<span asp-validation-for="DzienLiturgiczny" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for="NazwaDnia"></label>
<textarea asp-for=NazwaDnia class="form-control" disabled></textarea>
<textarea asp-for="NazwaDnia" class="form-control" hidden></textarea>
<span asp-validation-for="NazwaDnia" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=KomZrodloD></label>
<input asp-for=KomZrodloD class="form-control" disabled/>
<input asp-for="KomZrodloD" class="form-control" hidden/>
<span asp-validation-for="KomZrodloD" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=KomZrodloM></label>
<input asp-for=KomZrodloM class="form-control" disabled/>
<input asp-for="KomZrodloM" class="form-control" hidden/>
<span asp-validation-for="KomZrodloD" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=IdKsiazka1></label>
<input asp-for=IdKsiazka1 class="form-control" disabled/>
<input asp-for="IdKsiazka1" class="form-control" hidden/>
<span asp-validation-for="IdKsiazka1" class="text-danger"></span>
</div>
<div class="mb-3">
<label asp-for=NumerTygodnia></label>
<input asp-for=NumerTygodnia class="form-control" disabled/>
<input asp-for="NumerTygodnia" class="form-control" hidden/>
<span asp-validation-for="NumerTygodnia" class="text-danger"></span>
</div>
<div class="mb-3">
<label class="text-danger">@TempData["error"]</label>
   </div>
   <button type="submit" class="btn btn-danger">
   Usuń</button>
   <a asp-controller="Kalendarz" asp-action="Index" class="btn btn-secondary">
            Wróć do listy
        </a>
</div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
     }
}
